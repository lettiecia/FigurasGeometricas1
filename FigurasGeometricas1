package figurasgeometricas1:

public class figuras {
    
    double area;
    
    public void areacircuolo(double radio){
        area=(3.1416)*(radio*radio));
        System.out.println("El area del circulo es: "+area);
    }
}
public void areacuadrado(double lado){
area=lado*lado;
System.out.print1n("El area del cuadrado es: "+area);

public void areatriangulo(double base, double altura){
      area=(base*altura)/2;
System.out.print1n("El area del triangulo es: "+area);
}
public void arearectangulo(double ancho, double largo){
area= ancho * largo;
System.out.print1n("El area del rectangulo es:" + area);
}
public void areaesfera(double radio2){
area=((4*3.1416))*(radio2*radio2));
System.out.print1n("El area del cubo es: "+ area);
}
}
